<!DOCTYPE html>
<html>
  <head>
    <title>Calmo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/dc24351428.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to destroy_admin_session_path, method: :delete,class: "nav-link text-dark" do %>
                  管理者ログアウト
                <% end %>
    <%= link_to  destroy_customer_session_path, method: :delete, class: "nav-link text-dark" do %>
                  会員ログアウト
                <% end %>


      <% if flash[:notice] %>
        <p class="alert alert-success mt-3"><%= notice %></p>
      <% elsif flash[:alert] %>
        <p class="alert alert-danger mt-3"><%= alert %></p>
      <% end %>

        <%= yield %>
  </body>
</html>
