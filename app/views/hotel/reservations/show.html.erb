<div class="container mt-3">
  <h4 class="font-weight-bold mb-3 offset-2">予約詳細</h4>
  <div class="col-lg-6 col-md-9 col-sm-4 offset-3">
    <table class="table table-border">
      <tr>
        <th>予約ID</th>
        <td><%= @reservation.id %></td>
      </tr>
      <tr>
        <th>予約確定日</th>
        <td><%= @reservation.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      </tr>
      <tr>
        <th>宿泊予定日</th>
        <td><%= @reservation.start_reservation_date %></td>
      </tr>
      <tr>
        <th>お帰り予定日</th>
        <td><%= @reservation.end_reservation_date %></td>
      </tr>
      <tr>
        <th>予約者名</th>
        <td><%= link_to @reservation.customer.full_name, hotel_customer_path(@reservation.customer) %> 様</td>
      </tr>
      <tr>
        <th>人数</th>
        <td><%= @reservation.number %>人</td>
      </tr>
      <tr>
        <th>予約メニュー</th>
        <td><%= @reservation.menu.title %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td>
          <%= @reservation.status %>
          <%= link_to "編集", edit_hotel_menus_reservation_path, class: "btn btn-outline-primary btn-sm offset-1" %>
        </td>
      </tr>
    </table>
  </div>
</div>
