<div class="container mt-3">

  <div class="row d-flex justify-content-between">
    <h3 class="font-weight-bold ml-2">メニュー一覧</h3>

  </div>

  <div class="row mt-3">
    <table class="table table-hover table-sm">
      <thead>
        <tr>
          <th>メニューID</th>
          <th>メニュー名</th>
          <th>税込価格</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @menus.each do |menu| %>
          <tr>
            <td><%= menu.id %></td>
            <td class="row">
              <%= link_to hotel_menus_path (menu.id) do %>
                <%= image_tag menu.get_image(40, 27), class: "mr-2" %>
                <%= menu.title %>
              <% end %>
            </td>
             <td><%= menu.price %>円</td>
            <td class="font-weight-bold">
              <% if menu.is_available %>
                <p class="text-success">販売中</p>
              <% else %>
                <p class="text-danger">販売停止中</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
　 <%= link_to "メニューを追加する", new_hotel_menus_path, class: "btn btn-outline-success" %>
</div>