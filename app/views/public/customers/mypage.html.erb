<div class="container mt-3">

  <div class="row mb-5 ml-4">
    <h5 class="font-weight-bold">登録情報</h5>
    <%= link_to "編集する", information_path, class:"btn btn-sm btn-outline-success ml-3" %>
  </div>
  <div class="offset-lg-2 offset-md-1 col-lg-7 col-md-11 col-sm-9">
    <table class="table table-bordered mx-3" >
      <tbody>
          <th>氏名</th>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td class="details" style="width: 69%;"><%= @customer.address%></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email%></td>
        </tr>
      </tbody>
    </table>
  </div>

</div>