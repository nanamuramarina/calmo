<h3 class="offset-md-3 mt-3">お問合せ</h3>
<%= form_with model: @contact, url: contacts_path, method: :post  do |f| %>
  <div class="offset-4">お名前</br>
    <%= f.text_field :name %>
  </div>

  <div class="offset-4">メールアドレス</br>
    <%= f.text_field :mail %>
  </div>

  <div class="offset-4">本文</br>
    <%= f.text_area :message %>
  </div>

  <div class="offset-6">
    <%= f.submit '投稿',class: "btn btn-outline-success btn-sm"  %>
  </div>

<% end %>