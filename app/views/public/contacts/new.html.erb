<div class="container mt-2 mb-5">
  <div class="row justify-content-center">
    <div class="col-sm-6">
      <h3 class="mb-3">お問い合わせ</h3>
      <%= form_with model: @contact, url: contacts_path, method: :post  do |f| %>
        <div class="mb-3">
          <%= f.label :name, "名前", class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :mail, "返送先メールアドレス", class: "form-label" %>
          <%= f.text_field :mail, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :message,"メッセージ", class: "form-label" %>
          <%= f.text_area :message, class: "form-control" %>
        </div>

        <div class="offset-11">
          <%= f.submit '投稿', class: "btn btn-outline-success btn-sm"  %>
        </div>
      <% end %>
    </div>
  </div>
</div>