<div class="container mt-3">
  <h3>通報一覧</h3>
  <div class="row">
    <table class="table table-sm table-hover">
      <thead>
        <tr>
          <th class="text-center">通報ID</th>
          <th>会員名</th>
          <th>通報者</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @reports.each do |report| %>
          <tr>
            <td class="text-center">
              <%= link_to report.id, admin_report_path(report) %>
            </td>
            <td>
              <%= report.hotel.name %>
            </td>
            <td>
              <%= report.customer.full_name %>
            </td>
            <td>
              <% case report.status %>
                <% when '未対応' %>
                  <span class="status-untouched">未対応</span>
                <% when '対応中' %>
                  <span class="status-middle">対応中</span>
                <% when '対応済み' %>
                  <span class="status-finish">対応済み</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
