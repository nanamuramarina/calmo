<div class="container mt-5">

  <h4 class="font-weight-bold mb-5"><%= @customer.full_name %>さんの会員情報</h4>
  <div class="row">
    <h5 class="font-weight-bold mb-3 ml-3"> 会員ID <%= @customer.id %></h5>
  </div>
  <%= form_with model: [:admin, @customer] do |f| %>
    <div class="row mb-3">
      <%= f.label "氏名", class: "col-lg-2 col-md-3 col-sm-4 mb-3" %>
      <%= f.text_field :last_name, autofocus: true, class: "col-lg-3 col-md-3 mx-2" %>
      <%= f.text_field :first_name, autofocus: true, class: "col-lg-3 col-md-3 mx-2" %>
    </div>

    <div class="row mb-3">
      <%= f.label "フリガナ", class: "col-lg-2 col-md-3 col-sm-4 mb-3" %>
      <%= f.text_field :last_name_kana, autofocus: true, class: "col-lg-3 col-md-3 mx-2" %>
      <%= f.text_field :first_name_kana, autofocus: true, class: "col-lg-3 col-md-3 mx-2" %>
    </div>

    <div class="row mb-3">
      <%= f.label :post_code, "郵便番号", class: "col-lg-2 col-md-3 col-sm-4 mb-3" %>
      <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", class: "col-lg-3 col-md-3 mx-2" %>
    </div>

    <div class="row mb-3">
      <%= f.label :address, "住所", class: "col-lg-2 col-md-3 col-sm-4 mb-3" %>
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-lg-6 col-md-5 col-sm-4 mx-2" %>
    </div>

    <div class="row mb-3">
      <%= f.label :phone_number, "電話番号", class: "col-lg-2 col-md-3 col-sm-4 mb-3" %>
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "col-lg-3 col-md-3 mx-2" %>
    </div>

    <div class="row mb-3">
      <%= f.label :email , "メールアドレス", class: "col-lg-2 col-md-3 col-sm-4 mb-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-3 col-md-3 mx-2" %>
    </div>
    <div class="row">
      <h5 class="font-weight-bold ml-3 mr-3">会員ステータス</h5>
      <%= f.radio_button :is_valid, :true, class: "mr-2" %>
      <%= f.label :is_valid, "有効", value: true, class: "text-success mr-2" %>

      <%= f.radio_button :is_valid, :false, class: "mr-2" %>
      <%= f.label :is_valid, "退会", value: false, class: "text-danger mr-2" %>
    </div>

    <div class="d-flex justify-content-center">
      <%= f.submit "変更を保存", class:"btn btn-outline-primary mb-3" %>
    </div>
  <% end %>
</div>