<div class="container mt-3">
  <div class="row d-flex justify-content-between">
     <h3 class="font-weight-bold mb-4 offset-3">検索結果</h3>

     </div>
     <div class="offset-9">
       <%= @results.count %>件
     </div>


  </div>
 <div class="row">
  <table class="table table-sm table-hover table-small">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
      </tr>
    </thead>
    <tbody>
      <% @results.each do |result| %>
        <tr>
          <td>
            <%= link_to admin_customer_path(result.id) do %>
              <%= result.id %>
            <% end %>
          </td>
          <td>
            <%= link_to admin_customer_path(result.id) do %>
              <%= result.full_name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
